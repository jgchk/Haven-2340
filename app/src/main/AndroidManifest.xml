<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.curlybois.haven">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controllers.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.RegistrationActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Controllers.ShelterListActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Controllers.ShelterDetailActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name="Controllers.SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

    </application>

</manifest>